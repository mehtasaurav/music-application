body{
	background-color:white;
}

*{
	margin:0;
	padding:0;
}

nav{
font-family:Arial;
}

nav ul{
display: flex;
list-style-type:none;
align-items:center;
height:80px;
background-color: #4f4f4f;
color:black;
font-weight:bolder;
font-size:1.3rem
}



nav ul li{
padding:0 12px;
}

.brand img{
width: 160px;
padding: 0 8px;
border-radius:30px;
}

.brand {
display:flex;
align-items:center;
font-weight:bolder;
font-size:1.3rem
}

.container{
min-height:55vh;
background-color:black;
color:#351313;
display:flex;
margin: 30px auto;
width: 70%;
border-radius:12px;
padding: 34px;
background-image: url("./image_resource/peakpx.jpg");
background-size: cover;
background-position:center;
background-repeat: no-repeat; 
}

.bottom{
	position:sticky;
	height:120px;
	background-color:#4f4f4f;
	color:white;
	bottom:0;
	display:flex; 
	align-items:center;
	justify-content:center;
	flex-direction:column;
}

#myProgressBar{
	width:80vw;
	cursor:pointer;
}

.icons i{
	padding:2px 9px;
	cursor:pointer;
}

.icons{
margin-top: 14px;
}

.songItemContainer{
margin-top: 84px;

}
.songItem{
	height: 50px;
	display:flex;
	background-color: white;
	color: black;
	margin: 12px 0;
	justify-content:space-between;
	align-items:center;
	border-radius:20px;
}

.songItem img{
	width:55px;
	margin: 0 23px;
	border-radius: 34px;

}

.songListPlay{
padding: 12px;
}

.songListPlay i{
padding: 12px;
cursor:pointer;
}

.timestamp{
margin:0 23px;
}
.songInfo{
position:absolute;
left:0;
padding:0px 20px;
}

.songInfo img{
border-radius:50px;
opacity:0;
transition:opacity 1s ease-in;
}